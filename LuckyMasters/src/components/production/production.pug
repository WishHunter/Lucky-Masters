mixin products(section_name)
	div(class=section_name).products
		ul.flex-block.products__flex
			li.flex-block__item.products__advantage 
				a.products__link(href="#")
					img.products__img(src=$img+"main-product1.png", alt="")
					p.products__header Дозаторы
				- var items = ['Ленточные','Шлюзовые','Шнековые','Цепные','Затариватели']
				.products__list
					each item in items
						a.link.products__item(href="#") 
							span.link__text #{item}	

			li.flex-block__item.products__advantage 
				a.products__link(href="#")
					img.products__img(src=$img+"main-product2.png", alt="")
					p.products__header Транспортеры
				- var items = ['Ленточные','Цепные','Для отведения мешков']
				.products__list
					each item in items
